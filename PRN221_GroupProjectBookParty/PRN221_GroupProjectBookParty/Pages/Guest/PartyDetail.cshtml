@page
@model PRN221_GroupProjectBookParty.Pages.Guest.PartyDetailModel

@{
    var party = Model.Party;
    ViewData["Title"] = "Party Detail";
    Layout = "/Pages/Layout/_LayoutUser.cshtml";
}



<div class="container-xxl bg-white p-0">
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Header Start -->
    <!-- Header End -->
    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 p-0" style="background-image: url('@Url.Content("~/img/carousel-1.jpg")');">
        <div class="container-fluid page-header-inner py-5">
            <div class="container text-center pb-5">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Rooms</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center text-uppercase">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Rooms</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Booking Start -->
    <div class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container">
        </div>
    </div>
    <!-- Booking End -->
    <!-- Room Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title text-center text-primary text-uppercase">View Details</h6>
                <h1 class="mb-5">@party.Name</h1>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <img class="img-fluid" src="@party.ImageUrl" alt="Image of Party">
                    @* <img class="img-fluid" src="@Url.Content("~/img/room-3.jpg")" alt="Image of Party"> *@
                </div>
                <div class="col-md-6">
                    <div>
                        <p class="translate-middle-y bg-primary text-white rounded py-2 px-4 ms-4 fs-5 fw-bold">
                            $@Html.DisplayFor(modelItem => party.Price)
                        </p>
                        <p class="border-end me-3 pe-3 fs-5">
                            <i class="fa fa-palette text-primary me-2"></i>@Html.DisplayFor(modelItem => party.Theme)
                        </p>
                        <p class="border-end me-3 pe-3 fs-5">
                            <i class="fa fa-users text-primary me-2"></i>@Html.DisplayFor(modelItem => party.MaxPeople)
                        </p>
                        <p class="border-end me-3 pe-3 fs-5">
                            <i class="fa fa-map-marker text-primary me-2"></i>@Html.DisplayFor(modelItem => party.City)
                        </p>
                        <p class="fs-5">@party.Description</p>
                    </div>

                    <div class="ps-2 fs-5">
                        <small class="fa fa-star text-primary"></small>
                        <small class="fa fa-star text-primary"></small>
                        <small class="fa fa-star text-primary"></small>
                        <small class="fa fa-star text-primary"></small>
                        <small class="fa fa-star text-primary"></small>
                    </div>
                    <div class="d-flex justify-content-start fs-5">
                        <!-- <a class="btn btn-sm btn-primary rounded py-2 px-4" href="">View Detail</a> -->
                        <a class="btn btn-sm btn-dark rounded py-2 px-4" href="./Booking/@party.Id">Book Now</a>
                    </div>

                </div>
            </div>

            @*  *@
        </div>
    </div>
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>
