    <div class="container-fluid page-header mb-5 p-0" style="background-image: url('@Url.Content("~/img/carousel-1.jpg")');">
        <div class="container-fluid page-header-inner py-5">
            <div class="container text-center pb-5">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Rooms</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center text-uppercase">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Rooms</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Booking Start -->
    <div class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container">
        </div>
    </div>
    <!-- Booking End -->
    <!-- Room Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title text-center text-primary text-uppercase">Our Rooms</h6>
                <h1 class="mb-5">Explore Our <span class="text-primary text-uppercase">Rooms</span></h1>
            </div>
            <div class="row g-4">
                @foreach (var item in Model.Party)
                {
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="room-item shadow rounded overflow-hidden">
                            <div class="position-relative">
                                <img class="img-fluid" src="@item.ImageUrl" alt="">
                                <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">$@Html.DisplayFor(modelItem => item.Price)</small>
                            </div>
                            <div class="p-4 mt-2">
                                <div class="d-flex justify-content-between mb-3">
                                    <h5 class="mb-0" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%;
                                            line-height: 1.2em; height: 2.4em;">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </h5>
                                    <div class="ps-2">
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                    </div>
                                </div>
                                <div class="d-flex mb-3">
                                    <small class="border-end me-3 pe-3"><i class="fa fa-users text-primary me-2"></i>@Html.DisplayFor(modelItem => item.MaxPeople)</small>
                                    <small><i class="fa fa-map-marker text-primary me-2"></i>@Html.DisplayFor(modelItem => item.City)</small>
                                    <i class="fa-solid fa-map-location-dot"></i>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <a asp-page="PartyDetail" asp-route-id="@item.Id" class="btn btn-sm btn-primary rounded py-2 px-4">View Detail</a>
                                    <a class="btn btn-sm btn-dark rounded py-2 px-4" href="/Guest/Booking/@item.Id">Book Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div style="text-align: center;">
        @if (Model.CurrentPage > 1)
        {
            <a href="?currentPage=@(Model.CurrentPage - 1)" class="btn btn-primary">Previous</a>
        }
        else
        {
            <a class="btn btn-secondary" disabled>Previous</a>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a href="?currentPage=@(Model.CurrentPage + 1)" class="btn btn-primary">Next</a>
        }
        else
        {
            <a class="btn btn-secondary" disabled>Next</a>
        }
    </div>
